<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorLight</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.SlideTransition</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme_NoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorLight</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.SlideTransition</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.SlideTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
    </style>

    <style name="AppTheme.FadeTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="personal_info">

        <item name="android:textSize">14sp</item>

        <item name="android:textColor">
            #444444
        </item>

    </style>

    <style name="allow_notif">

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textColor">
            #80444444
        </item>

    </style>

    <style name="payment_info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
    </style>

</resources>
